@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = "PublicRoot.cshtml";
	var LoginPage =  Umbraco.Content(Umbraco.Field("loginPage", recursive: true).ToString()).Url;
	string mediaId = Umbraco.Field("backgroundImage", recursive: true).ToString();
	var bgImage = Umbraco.Media(mediaId);
}
<div id="login-full-wrapper" class="reset-password-wrapper" style="background: url(@Umbraco.Field("portalBackgroundImage", recursive: true)) no-repeat center center;">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div id="login-box">
						<div id="login-box-holder">
							<div class="row">
								<div class="col-xs-12">
									<header id="login-header">
										<div id="login-logo">
											<img src="/Themes/cube2/img/logo.png" alt=""/>
										</div>
									</header>
									<div id="login-box-inner" class="with-heading">
										<h4>Forgot your password?</h4>
										<p>
											Enter your email address to recover your password.
										</p>
										<form role="form" action="index.html">
											<div class="input-group reset-pass-input">
												<span class="input-group-addon"><i class="fa fa-user"></i></span>
												<input class="form-control" type="text" placeholder="Email address">
											</div>
											<div class="row">
												<div class="col-xs-12">
													<button type="submit" class="btn btn-success col-xs-12">Reset password</button>
												</div>
												<div class="col-xs-12">
													<br/>
													<a href="@LoginPage" id="login-forget-link" class="forgot-link col-xs-12">Back to login</a>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>